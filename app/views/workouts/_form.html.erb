<%= simple_form_for(@workout, html: {class: "form-signin"}) do |f| %>

	<h3 class="text-center">Cool! Well what'd ya do?</h3>
<%= f.input :exercise, required: true, autofocus: true, label: false, placeholder: "Use something like... Burpees!", input_html: {class: "form-control"} %>

	<h3 class="text-center">How many?</h3>
<%= f.input :reps, required: true, label: false, placeholder: "Tell the truth - don't cheat yo self fool!", input_html: {class: "form-control"} %> 

	<h3 class="text-center">How heavy?</h3>
<%= f.input :weight, required: true, label: false, placeholder: "It's okay we won't laugh...cough cough", input_html: {class: "form-control"} %>

<%= f.button :submit, "Submit", class: "btn btn-primary btn-block", method: "post" %>

<% end %>	